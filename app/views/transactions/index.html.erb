<h1>Listing transactions</h1>

<table>
  <tr>
    <th>From account</th>
    <th>To account</th>
    <th>Amount</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transactions.each do |transaction| %>
  <tr>
    <td><%= current_user.accounts.find_by_id(transaction.from_account.to_i).account_name %></td>
    <td><%= current_user.accounts.find_by_id(transaction.to_account.to_i).account_name %></td>
    <td><%= transaction.amount %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Transaction', new_transaction_path %>
<br/><br/>
<%= link_to 'Back to accounts', accounts_path %>
